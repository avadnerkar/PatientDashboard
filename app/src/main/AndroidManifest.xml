<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.physiotherapy.mcgill.patientmonitoring" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewPatientFormActivity"
            android:label="@string/title_activity_new_patient_form"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".DischargePatientForm"
            android:label="@string/title_activity_discharge_patient_form"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.physiotherapy.mcgill.patientmonitoring.MainActivity" />
        </activity>
        <activity
            android:name=".ScoreHistory"
            android:label="@string/title_activity_score_history"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.physiotherapy.mcgill.patientmonitoring.MainActivity" />
        </activity>
        <activity
            android:name=".ScoreGraphs"
            android:label="@string/title_activity_score_graphs"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.physiotherapy.mcgill.patientmonitoring.MainActivity" />
        </activity>
        <activity
            android:name=".PatientFormActivity"
            android:label="@string/title_activity_patient_form"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>
