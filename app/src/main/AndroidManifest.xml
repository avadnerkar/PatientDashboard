<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.physiotherapy.mcgill.patientmonitoring" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainGroup.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Scores.ScoreHistory"
            android:label="@string/title_activity_score_history"
            android:parentActivityName=".MainGroup.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainGroup.MainActivity" />
        </activity>
        <activity
            android:name=".Scores.ScoreGraphs"
            android:label="@string/title_activity_score_graphs"
            android:parentActivityName=".MainGroup.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainGroup.MainActivity" />
        </activity>
        <activity
            android:name=".PatientForms.PatientFormActivity"
            android:label="@string/title_activity_patient_form"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".PatientForms.DischargeFormActivity"
            android:label="@string/title_activity_discharge"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".PhysicianForms.CnsActivity"
            android:label="@string/title_activity_cns" >
        </activity>
        <activity
            android:name=".PhysicianForms.CharlsonActivity"
            android:label="@string/title_activity_charlson" >
        </activity>
        <activity
            android:name=".PhysicianForms.FormTemplate"
            android:label="@string/title_activity_form_template" >
        </activity>
    </application>

</manifest>
